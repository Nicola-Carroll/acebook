<%= form_for @new_post do |form| %>
  <div>
    <%= form.label :message %><br>
    <%= form.text_area :message, placeholder: 'Create a new post',
    :class => 'textarea' %>
  </div>
  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit "Submit" %>
  </div>
<% end %>

<% @list_posts.each do |post| %>
  <p><%= User.find(post.user_id).username %></p>
  <p><%= post.message %></p>
  <%= link_to 'Like', post, method: 'patch' %>
  <% if post.likes > 0 %>
    Likes: <%= post.likes %>
  <br>
  <% end %>
  <br>
  <%= link_to 'Comments', post_path(post)%>
<% end %>
